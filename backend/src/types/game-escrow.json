{
  "version": "0.1.0",
  "name": "game_escrow",
  "instructions": [
    {
      "name": "initializeMatch",
      "accounts": [
        {
          "name": "gameEscrow",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "playerA",
          "isMut": true,
          "isSigner": true
        },
        {
          "name": "playerB",
          "isMut": false,
          "isSigner": false
        },
        {
          "name": "systemProgram",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": [
        {
          "name": "matchId",
          "type": "u128"
        },
        {
          "name": "entryFeeLamports",
          "type": "u64"
        }
      ]
    },
    {
      "name": "deposit",
      "accounts": [
        {
          "name": "gameEscrow",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "player",
          "isMut": true,
          "isSigner": true
        },
        {
          "name": "systemProgram",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": []
    },
    {
      "name": "submitResult",
      "accounts": [
        {
          "name": "gameEscrow",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "backendSigner",
          "isMut": false,
          "isSigner": false
        },
        {
          "name": "player",
          "isMut": false,
          "isSigner": true
        }
      ],
      "args": [
        {
          "name": "winnerPubkey",
          "type": {
            "option": "publicKey"
          }
        },
        {
          "name": "resultType",
          "type": {
            "defined": "ResultType"
          }
        },
        {
          "name": "backendSignature",
          "type": {
            "array": ["u8", 64]
          }
        }
      ]
    },
    {
      "name": "settle",
      "accounts": [
        {
          "name": "gameEscrow",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "winner",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "playerA",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "playerB",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "feeWallet",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "systemProgram",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": []
    },
    {
      "name": "refundIfOnlyOnePaid",
      "accounts": [
        {
          "name": "gameEscrow",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "playerA",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "playerB",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "systemProgram",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": []
    }
  ],
  "accounts": [
    {
      "name": "GameEscrow",
      "type": {
        "kind": "struct",
        "fields": [
          {
            "name": "matchId",
            "type": "u128"
          },
          {
            "name": "playerA",
            "type": "publicKey"
          },
          {
            "name": "playerB",
            "type": "publicKey"
          },
          {
            "name": "entryFeeLamports",
            "type": "u64"
          },
          {
            "name": "isPaidA",
            "type": "bool"
          },
          {
            "name": "isPaidB",
            "type": "bool"
          },
          {
            "name": "gameStatus",
            "type": {
              "defined": "GameStatus"
            }
          },
          {
            "name": "winner",
            "type": {
              "option": "publicKey"
            }
          },
          {
            "name": "resultType",
            "type": {
              "defined": "ResultType"
            }
          },
          {
            "name": "createdAt",
            "type": "i64"
          },
          {
            "name": "timeoutAt",
            "type": "i64"
          }
        ]
      }
    }
  ],
  "types": [
    {
      "name": "GameStatus",
      "type": {
        "kind": "enum",
        "variants": [
          {
            "name": "Pending"
          },
          {
            "name": "Active"
          },
          {
            "name": "Settled"
          }
        ]
      }
    },
    {
      "name": "ResultType",
      "type": {
        "kind": "enum",
        "variants": [
          {
            "name": "Unresolved"
          },
          {
            "name": "Win"
          },
          {
            "name": "DrawFullRefund"
          },
          {
            "name": "DrawPartialRefund"
          }
        ]
      }
    }
  ],
  "errors": [
    {
      "code": 6000,
      "name": "UnauthorizedPlayer",
      "msg": "Unauthorized player"
    },
    {
      "code": 6001,
      "name": "InvalidGameStatus",
      "msg": "Invalid game status"
    },
    {
      "code": 6002,
      "name": "AlreadyPaid",
      "msg": "Player already paid"
    },
    {
      "code": 6003,
      "name": "GameTimeout",
      "msg": "Game timeout"
    },
    {
      "code": 6004,
      "name": "CannotSettle",
      "msg": "Cannot settle yet"
    },
    {
      "code": 6005,
      "name": "InsufficientFunds",
      "msg": "Insufficient funds"
    },
    {
      "code": 6006,
      "name": "GameNotTimeout",
      "msg": "Game not timed out yet"
    },
    {
      "code": 6007,
      "name": "BothPlayersPaid",
      "msg": "Both players paid, cannot use single refund"
    }
  ]
}

